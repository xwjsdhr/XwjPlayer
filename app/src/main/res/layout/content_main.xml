<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="2">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_main_music_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:layout_row="0"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <RelativeLayout
                android:id="@+id/rl_main_music_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="50dp">

                <ImageButton
                    android:id="@+id/ib_music_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/white"
                    android:src="@drawable/ic_music_video_48dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ib_music_list"
                    android:layout_centerHorizontal="true"
                    android:text="@string/text_music" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cv_main_video_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:layout_row="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <RelativeLayout
                android:id="@+id/rl_main_video_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="50dp">

                <ImageButton
                    android:id="@+id/ib_video_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/white"
                    android:src="@drawable/ic_video_library_48dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ib_video_list"
                    android:layout_centerHorizontal="true"
                    android:text="@string/text_video" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </GridLayout>
</RelativeLayout>